<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconMoon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/moon"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconSun"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/sun"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconTalk"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/talk"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconCycling"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/cycling"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconWrite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/write"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconDance"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/dance"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconTree"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/tree"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iconClean"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/clean"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

</GridLayout>
