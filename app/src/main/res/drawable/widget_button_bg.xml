<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="@color/buttonGold"
        android:endColor="@color/yellow_normal"
        android:angle="45"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Add little padding so text fits better -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp"/>
</shape>
